extends ../layout
block content
	.container
		.row
			table.table.table-hover.table-borderd
				thead
					tr
						th 海报
						th 电影名字
						th 导演
						th 国家
						th 上映时间
						th 录入时间
						th 查看
						th 更新
						th 删除
				tbody
					each item in movies 
						tr(class="item-hook-#{item._id}") 
							td: img(width="60" height="60" src="#{item.poster}")
							td #{item.title}
							td #{item.doctor}
							td #{item.country}
							td #{item.time}
							//- 此处使用的moment方法已在app.js中第17行中定义
							td #{moment(item.meta.createdTime).format('YYYY-MM-DD HH:mm')}
							td: a(target="_blank" href="../movie/#{item._id}") 查看
							td: a(target="_blank" href="../admin/update/#{item._id}") 修改
							td
								button.btn.btn-danger.del(type="button", data-poster="#{item.poster}" data-id="#{item._id}") 删除
	script(src="./../../js/delete.js")